<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
        <item name="colorControlHighlight">@color/sunshine_dark_blue</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowExitTransition">@transition/masterdetail</item>
        <item name="android:windowEnterTransition">@transition/masterdetail</item>

        <item name="android:windowSharedElementEnterTransition">@transition/masterdetail</item>
        <item name="android:windowSharedElementExitTransition">@transition/masterdetail</item>
    </style>
</resources>